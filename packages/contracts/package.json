{
  "name": "@soulaan/contracts",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "description": "Smart contracts for Soulaan Co-op (UC, SC, RedemptionVault)",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain",
    "test": "hardhat test",
    "test:uc": "hardhat test test/UnityCoin.test.ts",
    "test:sc": "hardhat test test/SoulaaniCoin.test.ts",
    "test:vault": "hardhat test test/RedemptionVault.test.ts",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:watch": "hardhat watch test",
    "node": "hardhat node",
    "node:fork": "hardhat node --fork https://mainnet.base.org",
    "console": "hardhat console",
    "console:local": "hardhat console --network localhost",
    "deploy:local": "hardhat run scripts/deploy-local.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network baseSepolia",
    "verify:sepolia": "hardhat run scripts/verify.ts --network baseSepolia",
    "create-wallet": "hardhat run scripts/create-wallet.ts",
    "check-balance": "hardhat run scripts/check-balance.ts --network baseSepolia",
    "check-balance:local": "hardhat run scripts/check-balance.ts --network localhost",
    "manage-roles": "hardhat run scripts/manage-roles.ts --network baseSepolia",
    "manage-roles:local": "hardhat run scripts/manage-roles.ts --network localhost",
    "rotate-wallet": "hardhat run scripts/rotate-wallet.ts",
    "monitor-sc-awards": "hardhat run scripts/monitor-sc-awards.ts --network baseSepolia",
    "check-inactive-decay": "hardhat run scripts/check-inactive-decay.ts --network baseSepolia",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "dotenv": "^16.6.1",
    "ethers": "^6.10.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/node": "^22.15.29",
    "chai": "^4.3.10",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.0.4"
  },
  "pnpm": {
    "overrides": {
      "chai": "^4.3.10",
      "@types/chai": "^4.3.11"
    }
  }
}
